update_fastlane
fastlane_require 'dotenv'


default_platform(:android)
  desc "build the application"
  lane :playstore do
    gradle(
      task: "clean assembleDebug",
    )

  testfairy(
    api_key: ENV['API_KEY'],
    apk: ENV['APK_PATH'],
    comment: "QA BUILD",
  )
  end

  after_all do |lane|
      slack(
        message: "Build successful",
        success: true
      )
   end

   error do |lane, exception|
       slack(
         message: exception.message,
         success: false
         )
    end


#  before_all do
#    Dotenv.overload '.env.qa'
#  end